<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/height_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.final2.Height">



    <LinearLayout
        android:id="@+id/linearQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/commuteQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="How tall are you in inches?"
            android:textSize="24sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="16dp"
                android:text=""
                android:textAllCaps="true" />

            <Button
                android:id="@+id/plusButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="24dp"
                android:layout_toRightOf="@id/height"
                android:onClick="increment"
                android:text="+" />

            <Button
                android:id="@+id/minusButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="24dp"
                android:layout_toLeftOf="@id/height"
                android:onClick="decrement"
                android:text="-" />


        </RelativeLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_margin="12dp"
    android:orientation="vertical"
    android:layout_below="@id/linearQuestion">

    <TextView
        android:id="@+id/comparisonMan"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Your height compared to the average man's:" />

    <TextView
        android:id="@+id/textViewMan"
        android:layout_width="90dp"
        android:layout_marginTop="24dp"
        android:layout_height="wrap_content"
        android:text="M"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/comparisonWom"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Your height compared to the average woman's:" />

    <TextView
        android:id="@+id/textViewWom"
        android:layout_marginTop="24dp"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="W" />

</LinearLayout>
</RelativeLayout>
